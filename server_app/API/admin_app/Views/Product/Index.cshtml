@model IEnumerable<admin_app.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product</h4>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary my-3" })

                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered no-wrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Image</th>
                                    <th>Category</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id_product)
                                        </td>
                                        <td>
                                            <p class="name-product">@Html.DisplayFor(modelItem => item.name_product)</p>
                                        </td>
                                        <td>
                                            @*@String.Format(“{ 0:0,0 vnđ}”, item.price_product)*@

                                            @Html.DisplayFor(modelItem => item.price_product) VNĐ
                                        </td>
                                        <td>
                                            @if (item.image.Substring(0, 5).Equals("https"))
                                            {
                                                <img src="@Url.Content(item.image)" width="70" />
                                            }
                                            else
                                            {
                                                <img src="@String.Format("data:image/png;base64,"+ item.image)" width="70" />
                                            }


                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category.name)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "edit", new { id = item.id_product }, new { @class = "btn btn-success mr-1" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id_product }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

